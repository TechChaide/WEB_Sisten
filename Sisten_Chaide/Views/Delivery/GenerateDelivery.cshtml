@model Sisten_Chaide.Models.GenerateDelivery
@{
    ViewBag.PageTitle = "Generar Entrega";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.PageTitle = @Labels.GenerateDelivery;
}


