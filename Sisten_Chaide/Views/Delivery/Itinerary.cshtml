<style>
    #map {
        position: relative;
        height: 500px;
    }

    .fc-day-grid-event, .fc-time-grid-event {
        cursor: pointer;
    }

    .select2-container .select2-selection {
        background: #edeef0;
        font-size: 14px !important;
        color: #4d4d4d !important;
    }

    select2-selection__choice {
        background-color: #ffffff;
    }

    .hasDatepicker {
        background: #edeef0;
        font-size: 14px !important;
        color: #4d4d4d !important;
    }
